    <menuitem name="Empresas Contratadoras" id="proyecto_ssg.menu_root"/>

    <!-- menu categories -->    
    <menuitem name="Empresas Contratadoras" id="proyecto_ssg.menu" parent="proyecto_ssg.menu_root"/>

